= form_for @work_hour do |f|
  - if @work_hour.errors.any?
    #error_explanation
      %h2= "#{pluralize(@work_hour.errors.count, "error")} prohibited this work_hour from being saved:"
      %ul
        - @work_hour.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :work_date
    = f.date_select :work_date
  .field
    = f.label :hours
    = f.number_field :quantity, min: 0, max: 12
    = f.label :minutes
    = f.number_field :minutes, min: 0, max: 59
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :project
    = f.collection_select(:project_id, Project.all, :id, :name)
  .actions
    = f.submit 'Save'
