= form_for @pending_work do |f|
  - if @pending_work.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pending_work.errors.count, "error")} prohibited this pending_work from being saved:"
      %ul
        - @pending_work.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :project
    = f.collection_select(:project_id, Project.all, :id, :name)
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
